            <TabItem Header="TabItem">
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="0,1" >
                    <WebBrowser Source="file:///C:/Users/andre/Documents/DnD%20Resources/Lost-Mine-of-Phandelver.pdf"></WebBrowser>
                </Border>
            </TabItem>
